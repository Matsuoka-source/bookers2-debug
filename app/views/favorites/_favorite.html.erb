<% if book.favorited_by?(current_user) %>
   <%= link_to book.favorites.count, book_favorites_path(book), data: {"turbolinks" => false} , method: :delete, class: "fas fa-heart", remote: true %>
<% else %>
   <%= link_to book.favorites.count, book_favorites_path(book), data: {"turbolinks" => false} ,method: :post, class: "far fa-heart", remote: true %>
<% end %>